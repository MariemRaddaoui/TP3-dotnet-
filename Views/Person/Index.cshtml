@model List<TP3.Models.Person>

@{
    ViewData["Title"] = "PERSONS";
}

<div class="text-center">
    <div class="row mb-2">
    <h1  style="font-size:400%; font-family:Times New Roman; color:DarkCyan;">LIST OF PERSONS</h1>
    <h3>
        <a asp-action="search">Search</a>
    </h3>
    </div>
          <div class="row">

    @foreach (TP3.Models.Person person in Model)
    {
        
    <div class="card mb-2 mx-1" style="width: 20rem;">
        <div class="card-body">
            <div  style="margin-top: 15px;">
                <p><h5 class="card-title" >@person.FirstName</h5>
                <h5 class="card-text"> @person.LastName</h5></p>
                <p>Email: @person.Email</p>
            </div>
        </div>
            
        <div class="card-footer" style="color: gray;">Country: @person.Country | DOB: @person.DateOfBirth
        </div>
          
    </div>
    }
</div>
