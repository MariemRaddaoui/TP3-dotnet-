@{ 
@model TP3.Models.Person
}
@{
    ViewData["Title"] = "RESULT";
}



@{
    if (@Model == null)
    {
        <h1>
          INVALID ID
        </h1>
    }
    else
    {
        <div class="text-center">
    <div class="row mb-2">
    <h1  style="font-size:400%; font-family:Times New Roman; color:DarkCyan;">RESULT</h1>
    <h3>
        <a asp-action="search">Search</a>
    </h3>
    </div>
          <div class="row">
         <div class="card mb-2 mx-1" style="width: 20rem;">
        <div class="card-body">
            <div  style="margin-top: 15px;">
                <p><h5 class="card-title" >@Model.FirstName</h5>
                <h5 class="card-text"> @Model.LastName</h5></p>
                <p>Email: @Model.Email</p>
            </div>
        </div>
            
        <div class="card-footer" style="color: gray;">Country: @Model.Country | DOB: @Model.DateOfBirth
        </div>
          
    </div>
          </div></div>
    }
}