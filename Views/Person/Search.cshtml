@model TP3.Models.Person

@{
    ViewData["Title"] = "SEARCH";
}

    <div class="row mb-2 text-center">
    <h1  style="font-size:400%; font-family:Times New Roman; color:DarkCyan;">SEARCH</h1>
    <h3>
        <a asp-action="index">BACK</a>
    </h3>
    </div>

@{
    if (ViewBag.notFound )
    {
        <div class="alert-danger">
            ERROR: NOT FOUND
        </div>
    }
}
<h4>Type a Name & a Country:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label  asp-for="FirstName" class="control-label"></label>
                <input name="FirstName" asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input name="Country" asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="SEARCH" class="btn btn-primary" />
            </div>
        </form>
    </div>
